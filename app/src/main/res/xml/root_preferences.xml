<PreferenceScreen xmlns:app="http://schemas.android.com/apk/res-auto">

    <PreferenceCategory app:title="Inställningar">


        <ListPreference
            app:defaultValue="USD"
            app:entries="@array/currency_entries"
            app:entryValues="@array/currency_values"
            app:key="Currency"
            app:title="Välj valuta"
            app:useSimpleSummaryProvider="true" />

        <EditTextPreference
            app:key="dateFrom"
            app:title="Startdatum (YYYY-MM-DD)"
            app:useSimpleSummaryProvider="true" />

        <EditTextPreference
            app:key="dateTo"
            app:title="Slutdatum (YYY-MM-DD)"
            app:useSimpleSummaryProvider="true" />

    </PreferenceCategory>

</PreferenceScreen>